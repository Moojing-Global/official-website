---
import { Image } from "astro:assets";
import logoLight from "../assets/brand/MooJing_Wordmark.png";
import logoDark from "../assets/brand/MooJing_Wordmark_White.png";

interface Props {
    /** Additional classes for the logo container */
    class?: string;
    /** Additional classes for the image element */
    imgClass?: string;
}

const { class: className = "", imgClass = "h-10 w-auto" } = Astro.props;
---

<a href="/" class={`flex items-center ${className}`} aria-label="Home">
    <!-- Light Mode Logo -->
    <Image
        src={logoLight}
        alt="MooJing Logo"
        width={200}
        height={40}
        format="webp"
        quality={90}
        loading="eager"
        class={`dark:hidden min-w-0 max-w-full ${imgClass}`}
    />
    <!-- Dark Mode Logo -->
    <Image
        src={logoDark}
        alt="MooJing Logo"
        width={200}
        height={40}
        format="webp"
        quality={90}
        loading="eager"
        class={`hidden dark:block min-w-0 max-w-full ${imgClass}`}
    />
</a>
