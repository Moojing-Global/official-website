---
import MainLayout from "@layouts/MainLayout.astro";
import { getCollection } from "astro:content";
import { getAllAuthors } from "../../utils/authors";

const authors = await getAllAuthors();

// Get post counts for each author
const allPosts = await getCollection("blog");
const authorPostCounts = new Map<string, number>();

authors.forEach(author => {
    const count = allPosts.filter(post => 
        post.data.authors?.includes(author.id)
    ).length;
    authorPostCounts.set(author.id, count);
});

const title = "Authors";
const description = "Meet the authors who contribute to our blog";
---

<MainLayout {title} {description}>
    <div class="authors-page">
        <h1>Authors</h1>
        <p class="page-description">Meet the authors who contribute to our blog</p>

        <div class="authors-grid">
            {authors.map((author) => {
                const postCount = authorPostCounts.get(author.id) || 0;
                return (
                    <article class="author-card">
                        <a href={`/authors/${author.id}`}>
                            {author.avatar && (
                                <img 
                                    src={author.avatar} 
                                    alt={author.name}
                                    class="author-avatar"
                                />
                            )}
                            <div class="author-info">
                                <h2>{author.name}</h2>
                                {author.bio && (
                                    <p class="author-bio">{author.bio}</p>
                                )}
                                <p class="post-count">
                                    {postCount} {postCount === 1 ? 'article' : 'articles'}
                                </p>
                            </div>
                        </a>
                    </article>
                );
            })}
        </div>
    </div>
</MainLayout>

<style>
    .authors-page {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

    .authors-page h1 {
        margin-bottom: 0.5rem;
    }

    .page-description {
        color: #6b7280;
        font-size: 1.125rem;
        margin-bottom: 3rem;
    }

    .authors-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 2rem;
    }

    .author-card {
        border: 1px solid #e5e7eb;
        border-radius: 0.5rem;
        overflow: hidden;
        transition: box-shadow 0.2s;
    }

    .author-card:hover {
        box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
    }

    .author-card a {
        text-decoration: none;
        color: inherit;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .author-avatar {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .author-info {
        padding: 1.5rem;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .author-info h2 {
        margin: 0 0 0.5rem;
        font-size: 1.5rem;
    }

    .author-bio {
        color: #6b7280;
        font-size: 0.875rem;
        margin-bottom: 1rem;
        flex: 1;
    }

    .post-count {
        color: #9ca3af;
        font-size: 0.875rem;
        font-weight: 500;
        margin: 0;
    }
</style>
