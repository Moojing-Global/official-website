---
import MainLayout from "@layouts/MainLayout.astro";

// SEO metadata
export const seoMeta = {
	title: "Style Guide",
	description:
		"Component library and typography showcase for the Moojing design system",
	canonical: "/style-guide",
};

// Navigation metadata
export const navMeta = {
	title: "Style Guide",
	menuOrder: 2,
};
---

<MainLayout {seoMeta}>
    <div class="bg-base-100 container mx-auto max-w-6xl space-y-16 px-8 py-12">
        <!-- Header -->
        <div class="text-center">
            <h1 class="mb-4 text-5xl font-bold">Style Guide</h1>
            <p class="text-base-content/70 text-xl">
                A comprehensive showcase of the Moojing design system
            </p>
        </div>

        <!-- Typography Section -->
        <section class="space-y-8">
            <h2 class="text-4xl font-bold">Typography</h2>

            <div class="space-y-4">
                <h1 class="text-5xl font-bold">
                    Heading 1 - Lorem Ipsum Dolor
                </h1>
                <h2 class="text-4xl font-bold">
                    Heading 2 - Consectetur Adipiscing
                </h2>
                <h3 class="text-3xl font-bold">Heading 3 - Sed Do Eiusmod</h3>
                <h4 class="text-2xl font-bold">
                    Heading 4 - Tempor Incididunt
                </h4>
                <h5 class="text-xl font-bold">
                    Heading 5 - Ut Labore Et Dolore
                </h5>
                <h6 class="text-lg font-bold">Heading 6 - Magna Aliqua</h6>
            </div>

            <div class="space-y-4">
                <p class="text-lg">
                    <strong>Large paragraph:</strong> Lorem ipsum dolor sit amet,
                    consectetur adipiscing elit, sed do eiusmod tempor incididunt
                    ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis
                    nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
                    consequat.
                </p>
                <p>
                    <strong>Regular paragraph:</strong> Duis aute irure dolor in
                    reprehenderit in voluptate velit esse cillum dolore eu fugiat
                    nulla pariatur. Excepteur sint occaecat cupidatat non proident,
                    sunt in culpa qui officia deserunt mollit anim id est laborum.
                </p>
                <p class="text-sm">
                    <strong>Small paragraph:</strong> Sed ut perspiciatis unde omnis
                    iste natus error sit voluptatem accusantium doloremque laudantium,
                    totam rem aperiam.
                </p>
            </div>

            <blockquote class="border-primary border-l-4 pl-4 italic">
                "The only way to do great work is to love what you do. If you
                haven't found it yet, keep looking. Don't settle."
            </blockquote>

            <div class="grid gap-8 md:grid-cols-2">
                <div>
                    <h4 class="mb-2 text-xl font-bold">Unordered List</h4>
                    <ul class="list-inside list-disc space-y-1">
                        <li>Lorem ipsum dolor sit amet</li>
                        <li>Consectetur adipiscing elit</li>
                        <li>
                            Sed do eiusmod tempor incididunt
                            <ul class="list-circle ml-6 list-inside space-y-1">
                                <li>Nested item one</li>
                                <li>Nested item two</li>
                            </ul>
                        </li>
                        <li>Ut labore et dolore magna aliqua</li>
                    </ul>
                </div>
                <div>
                    <h4 class="mb-2 text-xl font-bold">Ordered List</h4>
                    <ol class="list-inside list-decimal space-y-1">
                        <li>First step in the process</li>
                        <li>Second step to follow</li>
                        <li>
                            Third step with substeps
                            <ol class="ml-6 list-inside list-decimal space-y-1">
                                <li>Substep alpha</li>
                                <li>Substep beta</li>
                            </ol>
                        </li>
                        <li>Final step to complete</li>
                    </ol>
                </div>
            </div>
        </section>

        <!-- Buttons Section -->
        <section class="space-y-8">
            <h2 class="text-4xl font-bold">Buttons</h2>

            <div class="space-y-6">
                <div>
                    <h3 class="mb-4 text-2xl font-bold">Button Variants</h3>
                    <div class="flex flex-wrap gap-2">
                        <button class="btn">Default</button>
                        <button class="btn btn-neutral">Neutral</button>
                        <button class="btn btn-primary">Primary</button>
                        <button class="btn btn-secondary">Secondary</button>
                        <button class="btn btn-accent">Accent</button>
                        <button class="btn btn-info">Info</button>
                        <button class="btn btn-success">Success</button>
                        <button class="btn btn-warning">Warning</button>
                        <button class="btn btn-error">Error</button>
                    </div>
                </div>

                <div>
                    <h3 class="mb-4 text-2xl font-bold">Button Sizes</h3>
                    <div class="flex flex-wrap items-center gap-2">
                        <button class="btn btn-xs btn-primary"
                            >Extra Small</button
                        >
                        <button class="btn btn-sm btn-primary">Small</button>
                        <button class="btn btn-primary">Normal</button>
                        <button class="btn btn-lg btn-primary">Large</button>
                    </div>
                </div>

                <div>
                    <h3 class="mb-4 text-2xl font-bold">Button Styles</h3>
                    <div class="flex flex-wrap gap-2">
                        <button class="btn btn-primary">Solid</button>
                        <button class="btn btn-outline btn-primary"
                            >Outline</button
                        >
                        <button class="btn btn-ghost btn-primary">Ghost</button>
                        <button class="btn btn-link btn-primary">Link</button>
                        <button class="btn btn-primary" disabled
                            >Disabled</button
                        >
                    </div>
                </div>

                <div>
                    <h3 class="mb-4 text-2xl font-bold">Button Group</h3>
                    <div class="join">
                        <button class="btn join-item">Button 1</button>
                        <button class="btn join-item">Button 2</button>
                        <button class="btn join-item">Button 3</button>
                    </div>
                </div>
            </div>
        </section>

        <!-- Cards Section -->
        <section class="space-y-8">
            <h2 class="text-4xl font-bold">Cards</h2>

            <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
                <div class="card bg-base-100 shadow-xl">
                    <figure>
                        <img
                            src="https://picsum.photos/seed/card1/400/300"
                            alt="Random placeholder"
                        />
                    </figure>
                    <div class="card-body">
                        <h2 class="card-title">Card with Image</h2>
                        <p>
                            Lorem ipsum dolor sit amet, consectetur adipiscing
                            elit.
                        </p>
                        <div class="card-actions justify-end">
                            <button class="btn btn-primary">Learn More</button>
                        </div>
                    </div>
                </div>

                <div class="card bg-primary text-primary-content shadow-xl">
                    <div class="card-body">
                        <h2 class="card-title">Primary Card</h2>
                        <p>
                            Sed do eiusmod tempor incididunt ut labore et dolore
                            magna aliqua.
                        </p>
                        <div class="card-actions justify-end">
                            <button class="btn">Action</button>
                        </div>
                    </div>
                </div>

                <div class="card bg-base-100 shadow-xl">
                    <div class="card-body">
                        <h2 class="card-title">
                            Card with Badge
                            <div class="badge badge-secondary">NEW</div>
                        </h2>
                        <p>
                            Ut enim ad minim veniam, quis nostrud exercitation.
                        </p>
                        <div class="card-actions justify-end">
                            <div class="badge badge-outline">Feature</div>
                            <div class="badge badge-outline">Product</div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Alerts Section -->
        <section class="space-y-8">
            <h2 class="text-4xl font-bold">Alerts</h2>

            <div class="space-y-4">
                <div role="alert" class="alert">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        class="h-6 w-6 shrink-0 stroke-current"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                        ></path>
                    </svg>
                    <span>Default alert with informational message.</span>
                </div>

                <div role="alert" class="alert alert-info">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        class="h-6 w-6 shrink-0 stroke-current"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                        ></path>
                    </svg>
                    <span
                        >Info alert: Here's some useful information for you.</span
                    >
                </div>

                <div role="alert" class="alert alert-success">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-6 w-6 shrink-0 stroke-current"
                        fill="none"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                        ></path>
                    </svg>
                    <span>Success! Your operation completed successfully.</span>
                </div>

                <div role="alert" class="alert alert-warning">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-6 w-6 shrink-0 stroke-current"
                        fill="none"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
                        ></path>
                    </svg>
                    <span
                        >Warning: Please review the following information.</span
                    >
                </div>

                <div role="alert" class="alert alert-error">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-6 w-6 shrink-0 stroke-current"
                        fill="none"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"
                        ></path>
                    </svg>
                    <span>Error! Something went wrong with your request.</span>
                </div>
            </div>
        </section>

        <!-- Accordion Section -->
        <section class="space-y-8">
            <h2 class="text-4xl font-bold">Accordions</h2>

            <div class="space-y-2">
                <div class="collapse-plus bg-base-200 collapse">
                    <input type="radio" name="my-accordion" checked />
                    <div class="collapse-title text-xl font-medium">
                        What is Lorem Ipsum?
                    </div>
                    <div class="collapse-content">
                        <p>
                            Lorem Ipsum is simply dummy text of the printing and
                            typesetting industry. Lorem Ipsum has been the
                            industry's standard dummy text ever since the 1500s,
                            when an unknown printer took a galley of type and
                            scrambled it to make a type specimen book.
                        </p>
                    </div>
                </div>

                <div class="collapse-plus bg-base-200 collapse">
                    <input type="radio" name="my-accordion" />
                    <div class="collapse-title text-xl font-medium">
                        Why do we use it?
                    </div>
                    <div class="collapse-content">
                        <p>
                            It is a long established fact that a reader will be
                            distracted by the readable content of a page when
                            looking at its layout. The point of using Lorem
                            Ipsum is that it has a more-or-less normal
                            distribution of letters.
                        </p>
                    </div>
                </div>

                <div class="collapse-plus bg-base-200 collapse">
                    <input type="radio" name="my-accordion" />
                    <div class="collapse-title text-xl font-medium">
                        Where does it come from?
                    </div>
                    <div class="collapse-content">
                        <p>
                            Contrary to popular belief, Lorem Ipsum is not
                            simply random text. It has roots in a piece of
                            classical Latin literature from 45 BC, making it
                            over 2000 years old.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Badges Section -->
        <section class="space-y-8">
            <h2 class="text-4xl font-bold">Badges</h2>

            <div class="space-y-6">
                <div>
                    <h3 class="mb-4 text-2xl font-bold">Badge Colors</h3>
                    <div class="flex flex-wrap gap-2">
                        <div class="badge">Default</div>
                        <div class="badge badge-neutral">Neutral</div>
                        <div class="badge badge-primary">Primary</div>
                        <div class="badge badge-secondary">Secondary</div>
                        <div class="badge badge-accent">Accent</div>
                        <div class="badge badge-info">Info</div>
                        <div class="badge badge-success">Success</div>
                        <div class="badge badge-warning">Warning</div>
                        <div class="badge badge-error">Error</div>
                    </div>
                </div>

                <div>
                    <h3 class="mb-4 text-2xl font-bold">Badge Sizes</h3>
                    <div class="flex flex-wrap items-center gap-2">
                        <div class="badge badge-xs badge-primary">XS</div>
                        <div class="badge badge-sm badge-primary">Small</div>
                        <div class="badge badge-primary">Normal</div>
                        <div class="badge badge-lg badge-primary">Large</div>
                    </div>
                </div>

                <div>
                    <h3 class="mb-4 text-2xl font-bold">Badge Styles</h3>
                    <div class="flex flex-wrap gap-2">
                        <div class="badge badge-primary">Solid</div>
                        <div class="badge badge-outline badge-primary">
                            Outline
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Tabs Section -->
        <section class="space-y-8">
            <h2 class="text-4xl font-bold">Tabs</h2>

            <div role="tablist" class="tabs tabs-lifted">
                <input
                    type="radio"
                    name="my_tabs"
                    role="tab"
                    class="tab"
                    aria-label="Tab 1"
                    checked
                />
                <div
                    role="tabpanel"
                    class="tab-content rounded-box border-base-300 bg-base-100 p-6"
                >
                    <h3 class="mb-2 text-xl font-bold">First Tab Content</h3>
                    <p>
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                        Sed do eiusmod tempor incididunt ut labore et dolore
                        magna aliqua.
                    </p>
                </div>

                <input
                    type="radio"
                    name="my_tabs"
                    role="tab"
                    class="tab"
                    aria-label="Tab 2"
                />
                <div
                    role="tabpanel"
                    class="tab-content rounded-box border-base-300 bg-base-100 p-6"
                >
                    <h3 class="mb-2 text-xl font-bold">Second Tab Content</h3>
                    <p>
                        Ut enim ad minim veniam, quis nostrud exercitation
                        ullamco laboris nisi ut aliquip ex ea commodo consequat.
                    </p>
                </div>

                <input
                    type="radio"
                    name="my_tabs"
                    role="tab"
                    class="tab"
                    aria-label="Tab 3"
                />
                <div
                    role="tabpanel"
                    class="tab-content rounded-box border-base-300 bg-base-100 p-6"
                >
                    <h3 class="mb-2 text-xl font-bold">Third Tab Content</h3>
                    <p>
                        Duis aute irure dolor in reprehenderit in voluptate
                        velit esse cillum dolore eu fugiat nulla pariatur.
                    </p>
                </div>
            </div>
        </section>

        <!-- Images Section -->
        <section class="space-y-8">
            <h2 class="text-4xl font-bold">Images</h2>

            <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
                <figure>
                    <img
                        src="https://picsum.photos/seed/nature/400/300"
                        alt="Nature placeholder"
                        class="rounded-lg"
                    />
                    <figcaption
                        class="text-base-content/70 mt-2 text-center text-sm"
                    >
                        Nature Photography
                    </figcaption>
                </figure>

                <figure>
                    <img
                        src="https://picsum.photos/seed/city/400/300"
                        alt="City placeholder"
                        class="rounded-lg"
                    />
                    <figcaption
                        class="text-base-content/70 mt-2 text-center text-sm"
                    >
                        Urban Landscape
                    </figcaption>
                </figure>

                <figure>
                    <img
                        src="https://picsum.photos/seed/tech/400/300"
                        alt="Technology placeholder"
                        class="rounded-lg"
                    />
                    <figcaption
                        class="text-base-content/70 mt-2 text-center text-sm"
                    >
                        Technology & Innovation
                    </figcaption>
                </figure>
            </div>

            <div class="grid gap-6 md:grid-cols-2">
                <div class="avatar">
                    <div
                        class="ring-primary ring-offset-base-100 w-24 rounded-full ring ring-offset-2"
                    >
                        <img
                            src="https://picsum.photos/seed/avatar1/200/200"
                            alt="Avatar"
                        />
                    </div>
                </div>

                <div class="flex gap-2">
                    <div class="avatar">
                        <div class="w-16 rounded">
                            <img
                                src="https://picsum.photos/seed/avatar2/200/200"
                                alt="Avatar"
                            />
                        </div>
                    </div>
                    <div class="avatar">
                        <div class="w-16 rounded">
                            <img
                                src="https://picsum.photos/seed/avatar3/200/200"
                                alt="Avatar"
                            />
                        </div>
                    </div>
                    <div class="avatar">
                        <div class="w-16 rounded">
                            <img
                                src="https://picsum.photos/seed/avatar4/200/200"
                                alt="Avatar"
                            />
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Form Elements Section -->
        <section class="space-y-8">
            <h2 class="text-4xl font-bold">Form Elements</h2>

            <div class="grid gap-6 md:grid-cols-2">
                <div>
                    <label class="form-control w-full">
                        <div class="label">
                            <span class="label-text">Input Field</span>
                        </div>
                        <input
                            type="text"
                            placeholder="Type here"
                            class="input input-bordered w-full"
                        />
                    </label>
                </div>

                <div>
                    <label class="form-control w-full">
                        <div class="label">
                            <span class="label-text">Select Dropdown</span>
                        </div>
                        <select class="select select-bordered">
                            <option disabled selected>Pick one</option>
                            <option>Option 1</option>
                            <option>Option 2</option>
                            <option>Option 3</option>
                        </select>
                    </label>
                </div>

                <div>
                    <label class="form-control w-full">
                        <div class="label">
                            <span class="label-text">Textarea</span>
                        </div>
                        <textarea
                            class="textarea textarea-bordered h-24"
                            placeholder="Enter your message"></textarea>
                    </label>
                </div>

                <div class="space-y-4">
                    <div class="form-control">
                        <label class="label cursor-pointer justify-start gap-2">
                            <input type="checkbox" checked class="checkbox" />
                            <span class="label-text">Checkbox option</span>
                        </label>
                    </div>

                    <div class="form-control">
                        <label class="label cursor-pointer justify-start gap-2">
                            <input
                                type="radio"
                                name="radio-example"
                                class="radio"
                                checked
                            />
                            <span class="label-text">Radio option 1</span>
                        </label>
                    </div>

                    <div class="form-control">
                        <label class="label cursor-pointer justify-start gap-2">
                            <input
                                type="radio"
                                name="radio-example"
                                class="radio"
                            />
                            <span class="label-text">Radio option 2</span>
                        </label>
                    </div>

                    <div class="form-control">
                        <label class="label cursor-pointer justify-start gap-2">
                            <input
                                type="checkbox"
                                class="toggle toggle-primary"
                                checked
                            />
                            <span class="label-text">Toggle switch</span>
                        </label>
                    </div>
                </div>
            </div>
        </section>

        <!-- Back to Home -->
        <div class="text-center">
            <a href="/" class="btn btn-primary btn-lg">Back to Home</a>
        </div>
    </div>
</MainLayout>
