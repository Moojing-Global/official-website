---
import MainLayout from "@layouts/MainLayout.astro";

// SEO metadata
export const seoMeta = {
	title: "About Us",
	description:
		"Learn more about our company, mission, and the team behind our success.",
	canonical: "/about",
};

// Navigation metadata
export const navMeta = {
	title: "About",
	menuOrder: 3,
};
---

