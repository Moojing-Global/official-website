---
import Head from "@components/head.astro";
import "../styles/global.css";

export interface Props {
    title?: string;
    description?: string;
    canonical?: string;
    image?: string;
    imageAlt?: string;
    type?: "website" | "article";
    noindex?: boolean;
}

// Extract SEO props from frontmatter
const { title, description, canonical, image, imageAlt, type, noindex } =
    Astro.props;

const seoProps = {
    title,
    description,
    canonical,
    image,
    imageAlt,
    type,
    noindex,
};
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <Head {...seoProps} />
    </head>
    <body>
        <slot />
    </body>
</html>
